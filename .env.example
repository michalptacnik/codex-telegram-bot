# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:replace-with-real-token

# Optional: comma-separated Telegram user IDs allowed to use the bot
# Example: ALLOWLIST=12345678,98765432
ALLOWLIST=

# Optional: Codex CLI execution timeouts (seconds)
# CODEX_EXEC_TIMEOUT_SEC=180
# CODEX_VERSION_TIMEOUT_SEC=10

# Optional: persistent memory thin index cap
# MEMORY_INDEX_MAX_CHARS=8000

# Optional: SOUL kernel cap + optional formatting micro-pass
# SOUL_MAX_CHARS=2000
# ENABLE_POLISH_PROBE=0

# Optional: heartbeat proactivity (global opt-in gate)
# ENABLE_HEARTBEAT=0

# Optional: proactive delivery spend accounting units
# MESSAGE_SEND_COST_USD=0
# FILE_SEND_COST_USD=0

# Optional: Telegram attachment safety limits
# TELEGRAM_MAX_ATTACHMENT_BYTES=26214400
# TELEGRAM_MAX_ATTACHMENTS_PER_DAY=50

# Optional: Skill marketplace sources/verification
# SKILL_SOURCES_JSON=[{"name":"openai-skills","type":"github_repo","repo":"openai/skills","path":".agents/skills","ref":"main"}]
# SKILL_TRUSTED_PUBLISHER_KEYS=

# Optional: register SMTP email tool in default tool registry (0/1)
# ENABLE_EMAIL_TOOL=0

# Optional SMTP defaults for send_email_smtp
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=bot@example.com
# SMTP_APP_PASSWORD=replace-me
# SMTP_FROM=bot@example.com
